page{
  background-color: white;
}

.header {
  padding: 24rpx;
  margin-top: 13rpx;
  margin-bottom: 11rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header image {
  width: 50px;
  height: 50px;
}

.header_middle {
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}

.body_item_right {
  display: flex;
  flex: 1;
  flex-direction: row-reverse;
  align-items: center;
}

.postion {
    margin: 0px 8px;
    padding: 0px 8px;
    border-left: 1px solid #c9c9c9;
    border-right: 1px solid #c9c9c9;
}

.text {
  background: #d072e4;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: white;
  border-radius: 5rpx;
  font-size: 13px;
}

.header_text {
  font-size: 15px;
  color: #373737;
}
.header_line{
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
    width: 2rpx;
    background: #c9c9c9
}
.horizontal_flex image{
    margin-top: 27rpx;
    width: 10px;
    height: 10px;
}
.header_title{
    margin-top: 27rpx;
    font-size: 12px;
    margin-left: 10rpx;
    color: #d771c4;
    margin-right: 26rpx;
}
.header_time{
    margin-top: 27rpx;
    color: #979797;
    font-size: 12px;
}

.example_title {
  margin-top: 36rpx;
  margin-left: 30rpx;
  font-size: 16px;
  color: #272727;
}

.example_image {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 42rpx;
  margin-bottom: 30rpx;
  height: 270rpx;
}

.example_image image {
  width: 100%;
  height: 100%;
}

.example_content {
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 15px;
  color: #6f6f6f;
  line-height: 1.5em;
}





.images {
  margin-top: 30px;
  margin-left: 30px;
  justify-content: space-between;
  margin-bottom: 20px;
  overflow: hidden;
}

.image_bg {
  display: block;
  float: left;
  margin-right: 10px;
  margin-bottom: 10px;
  position: relative;
}

.image_bg image {
  width: 100%;
  height: 100%;
  display: block;
}

.image_bg text {
  width: 40px;
  height: 12px;
  font-size: 11px;
  color: white;
  background-color: black;
  opacity: 0.5;
  display: block;
  position: absolute;
  bottom: 0px;
  left: 0px;
  line-height: 15px;
  text-align: center;
}