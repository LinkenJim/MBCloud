/* pages/service/ask/ask.wxss */
.bg{
    padding: 16px 13px 11px 13px;
    background-color: white;
}

textarea{
    height: 150px;
    font-size: 15px;
}

.placeholder{
    color: #b8b8b8;
    font-size: 15px;
}

.textCount{
    color: #b3b3b3;
    text-align: right;
    font-size: 13px;
}

image{
    width: 80px;
    height: 80px;
    display: block;
    float: left;
}

.images{
    /*display: flex;*/
    /*justify-content: space-around;*/
    overflow: hidden;
    
}

.addImage{
    width: 150px;
    overflow: hidden;
    vertical-align: middle;
    float: left;
}

.photo{
    margin-right: 10px;
    margin-bottom: 10px;
}

.addImage text{
    display: block;
    float: left;
    height: 80px;
    line-height: 80px;
    font-size: 14px;
    color: #b3b3b3;
    margin-left: 5px;
}

.picker{
    height: 35px;
    width: 260px;
    text-align: center;
    margin: 21px auto 0px auto;
    background-color: white;
    line-height: 35px;
    color: #5f5f5f;
    font-size: 13px;
}

.submit{
    height: 35px;
    width: 260px;
    text-align: center;
    margin: 50px auto 0px auto;
    background-color: #d140b5;
    line-height: 35px;
    color: white;
    font-size: 15px;
    border-radius: 8px;
}

button::after{
    content: none;
}