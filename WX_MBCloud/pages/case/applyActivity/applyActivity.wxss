/* pages/case/applyActivity/applyActivity.wxss */

page {
  background-color: white;
}

.form {
  margin: 18px;
}

.font {
  font-size: 15px;
}

textarea, input, .sex {
  border: 1px solid #e0e0e0;
  background-color: #fcfcfc;
  margin-bottom: 14px;
  padding: 0px 10px;
}

textarea {
  padding-top: 15px;
  width: auto;
}

input, .sex {
  height: 36px;
}

.sex {
  line-height: 36px;
  color: #808080;
}

.isSelect {
  color: black;
}

.vcode {
  display: flex;
  height: 36px;
  margin-bottom: 14px;
}

.vcode input {
  flex: 1;
  margin-bottom: 0px;
  margin-right: 14px;
}

.vcode text {
  flex: 1;
  display: block;
  line-height: 36px;
  text-align: center;
  color: white;
  background-color: #d269e8;
}

.btn_commit {
  border-radius: 10px;
  color: white;
  background-color: #d269e8;
}
