/**app.wxss**/
@import "resource/lib/JYTool.wxss";
@import "resource/utils/util.wxss";


page{
  height: 100%;
  background-color: #f3f3f3;
}

/*每一行的样式*/
.service_root_section{
    background-color: white;
    margin-bottom: 5px;
}

.service_root_row{
    border-bottom: 1px solid #f3f3f3;
    padding: 18px 11px 10px 11px;
}

.noMoreData{
    padding-top: 30px;
    padding-bottom: 25px;
    text-align: center;
    color: #4a4a4a;
    font-size: 15px;
}
.horizontal_line{
    background-color: #cecece;
    width: 100%;
    height: 2rpx;
}
.horizontal_flex{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.vertical_flex{
    display: flex;
    flex-direction: column;
}
.contain{
    background: white;
    display: flex;
    flex-direction: column;
    height: 100%
}